@model OnlineFloralDelivery.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var orderDetailList = (List<OnlineFloralDelivery.Models.OrderDetail>)ViewBag.OrderDetail;
}


<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Order Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Admin/">Admin</a></li>
                        <li class="breadcrumb-item active">Order Detail</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-4">
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                     src="@Url.Content(Model.Customer.Picture)"
                                     alt="User profile picture">
                            </div>

                            <h3 class="profile-username text-center">@Model.Customer.FirstName @Model.Customer.LastName</h3>

                            <p class="text-muted text-center">@Model.Customer.Username</p>

                            <ul class="list-group list-group-unbordered mb-3">
                                <li class="list-group-item">
                                    <b>Gender</b> <a class="float-right">
                                        @{
                                            if (Model.Customer.Gender == true)
                                            {
                                                <div>Male</div>
                                            }
                                            else
                                            {
                                                <div>Female</div>
                                            }
                                        }
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <b>Birthday</b> <a class="float-right">@Model.Customer.DateOfBirth.Value.ToShortDateString()</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Phone</b> <a class="float-right">@Model.Customer.Phone</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Email</b> <a class="float-right">@Model.Customer.Email</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Address</b> <a class="float-right">@Model.Customer.Address</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Order ID</b> <a class="float-right">@Model.OrderID</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Creation Date</b> <a class="float-right">@Model.CreationDate</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Recipient</b> <a class="float-right">@Model.Recipient</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Shipped Date</b> <a class="float-right">@Model.ShippingDate</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Recipient</b> <a class="float-right">@Model.Message</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Phone</b> <a class="float-right">@Model.Phone</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Shipped Address</b> <a class="float-right">@Model.Address</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Note</b> <a class="float-right">@Model.Note</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Status</b>
                                    <a class="float-right">
                                        @if (Model.Status == 0)
                                        {
                                            <span class="badge badge-primary">Processing</span>
                                        }
                                        else if (Model.Status == 1)
                                        {
                                            <span class="badge badge-warning">Shipping</span>
                                        }
                                        else if (Model.Status == 2)
                                        {
                                            <span class="badge badge-success">Delivered</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Canceled</span>
                                        }
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <b>Payment</b> <a class="float-right">@Model.Payment.PaymentName</a>
                                </li>

                            </ul>
                            <a id="print" style="cursor:pointer; color:white" class="btn btn-primary btn-block"><b>Print</b></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card">
                        <div class="card-lightblue">
                            <div class="card-header">
                                <h3 class="card-title">Data of Order Detail</h3>
                            </div>
                            <div class="card-body">
                                <table id="tbl_OrderDetail" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                Product Name
                                            </th>
                                            <th>
                                                Unit Price
                                            </th>
                                            <th>
                                                Quantity
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in orderDetailList)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Bouquet.BouquetName
                                                </td>
                                                <td>
                                                    @item.UnitPrice
                                                </td>
                                                <td>
                                                    @item.Quantity
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>
@section ScriptConfig
{
    <link href="~/Assets/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/Assets/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Assets/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Assets/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
        $("#tbl_Orders").DataTable({
            "responsive": true,
            "autoWidth": false,
            "aoColumns": [
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null
            ]
        });

        $("#tbl_OrderDetail").DataTable({
            "responsive": true,
            "autoWidth": false,
            "aoColumns": [
                null,
                null,
                null
            ]
        });

        $('#print').click(function () {
            window.print();
            return false;
        });
    </script>
}