@model OnlineFloralDelivery.Models.Flower

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Flower Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Admin/">Admin</a></li>
                        <li class="breadcrumb-item"><a href="~/Admin/Flowers/">Flowers</a></li>
                        <li class="breadcrumb-item active">Detail</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h1 style="font-weight:bold; font-size:25px;" class="card-title">Detail of Flower</h1>

                <div class="card-tools">
                    <button class="btn btn-block btn-secondary float-right" onclick="window.location.href = '../'">Back to List</button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12 order-12 order-md-12">
                        <div class="row">
                            <div class="col-12">
                                <div class="post">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.FlowerID)</strong>:
                                    </div>
                                    <p class="col-sm-10">
                                        @Html.DisplayFor(model => model.FlowerID)
                                    </p>
                                </div>
                                <div class="post">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayName("Supplier name")</strong>:
                                    </div>
                                    <p class="col-sm-10">
                                        @ViewBag.SupplierName
                                    </p>
                                </div>
                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.ShortDescription)</strong>:
                                    </div>

                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.ShortDescription)
                                    </div>
                                </div>
                                <div class="post">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.UnitPrice)</strong>:
                                    </div>
                                    <p class="col-sm-10">
                                        @Html.DisplayFor(model => model.UnitPrice)
                                    </p>
                                </div>
                                <div class="post">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.Quantity)</strong>:
                                    </div>
                                    <p class="col-sm-10">
                                        @Html.DisplayFor(model => model.Quantity)
                                    </p>
                                </div>

                                <div class="post">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.Picture)</strong>:
                                    </div>
                                    @if (!Model.Picture.IsEmpty())
                                    {
                                        <img class="col-sm-10" id="imageDetail" src="@Url.Content(Model.Picture)" style="max-width:300px" />
                                    }
                                    else
                                    {
                                        <p>No Image</p>
                                    }
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.Meaning)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @Html.Raw(Model.Meaning)
                                    </div>

                                </div>
                                <div class="post">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.Status)</strong>:
                                    </div>
                                    <p class="col-sm-10">
                                        @if (Model.Status == true)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Disable</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
