@model OnlineFloralDelivery.Models.Bouquet

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Delete Bouquet</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Admin/">Admin</a></li>
                        <li class="breadcrumb-item"><a href="~/Admin/Bouquets/">Bouquets</a></li>
                        <li class="breadcrumb-item active">Delete</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-8">
                        <h1 style="font-weight:bold; font-size:25px" class="card-title">Are you sure you want to delete this?</h1>
                    </div>

                    <div class="col-sm-2">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <div class="card-tools">
                                    <input type="submit" value="Delete" class="btn btn-block btn-secondary float-right btn-danger" />
                                </div>
                            </div>
                        }
                    </div>

                    <div class="card-tools col-sm-2">
                        <button class="btn btn-block btn-secondary float-right" onclick="window.location.href = '../'">Cancel</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12 order-12 order-md-12">
                        <div class="row">
                            <div class="col-12">

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.BouquetID)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.BouquetID)
                                    </div>
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.BouquetName)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.BouquetName)
                                    </div>
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.Occasion.OccasionName)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Occasion.OccasionName)
                                    </div>
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.Sale.SaleName)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Sale.SaleName)
                                    </div>
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.UnitPrice)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.UnitPrice)
                                    </div>
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.OldUnitPrice)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.OldUnitPrice)
                                    </div>
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.ShortDescription)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.ShortDescription)
                                    </div>
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.Description)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @Html.Raw(Model.Description)
                                    </div>

                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.Quantity)</strong>:
                                    </div>
                                    <div class="col-sm-10">

                                        @Html.DisplayFor(model => model.Quantity)

                                    </div>
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.Status)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        @if (Model.Status == true)
                                        {
                                            <div>Stop Selling</div>
                                        }
                                        else
                                        {
                                            <div>Being Sold</div>
                                        }
                                    </div>
                                </div>

                                <div class="post row">
                                    <div class="col-sm-2 user-block">
                                        <strong>@Html.DisplayNameFor(model => model.MainImage)</strong>:
                                    </div>
                                    <div class="col-sm-10">
                                        <img class="img-responsive" src="@Url.Content(Model.MainImage)" alt="" style="max-width: 300px" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
