@model OnlineFloralDelivery.Models.Bouquet

@{
    ViewBag.Title = "Import";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Importations</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Admin/">Admin</a></li>
                        <li class="breadcrumb-item active">Importations</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Data of Bouquets</h3>
                        </div>
                        <div class="card-body">
                            <table id="tbl_Products_Import" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Bouquet Name
                                        </th>
                                        <th>
                                            Quantity
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in ViewBag.BouquetList)
                                    {
                                        <tr>
                                            <td>
                                                @item.BouquetName
                                            </td>
                                            <td>
                                                @item.Quantity
                                            </td>
                                            <td class="project-actions text-right">
                                                <a class="btn btn-success btn-sm" href="@Url.Action("CreateImport", "Bouquets", new { id = item.BouquetID })">
                                                    <i class="fas fa-file-import">
                                                    </i>
                                                    Import
                                                </a>
                                                <a class="btn btn-success btn-sm" href="@Url.Action("CreateExport", "Bouquets", new { id = item.BouquetID })">
                                                    <i class="fas fa-file-export">
                                                    </i>
                                                    Export
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

               

            </div>
        </div>
    </section>
</div>


@section ScriptConfig
{
    <link href="~/Assets/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/Assets/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Assets/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Assets/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
        $("#tbl_Products_Import").DataTable({
            "responsive": true,
            "autoWidth": false,
            "aoColumns": [
                null,
                null,
                { sWidth: '300px' }
            ]
        });

        $("#tbl_Import").DataTable({
            "responsive": true,
            "autoWidth": false,
            "aoColumns": [
                null,
                null,
                null,
                null,
                null,
                { sWidth: '80px' }
            ]
        });


    </script>
}