@model OnlineFloralDelivery.Models.Occasion

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Occasion Detail</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="~/Admin/">Admin</a></li>
                            <li class="breadcrumb-item"><a href="~/Admin/Occasions/">Occasions</a></li>
                            <li class="breadcrumb-item active">Detail</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <section class="content">
            <div class="card">
                <div class="card-header">
                    <h1 style="font-weight:bold; font-size:25px;" class="card-title">Detail of Occasion</h1>

                    <div class="card-tools">
                        <button class="btn btn-block btn-secondary float-right" onclick="window.location.href = '../'">Back to List</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-12 order-12 order-md-12">
                            <div class="row">
                                <div class="col-12">
                                    <div class="post">
                                        <div class="col-sm-2 user-block">
                                            <strong>@Html.DisplayNameFor(model => model.OccasionID)</strong>:
                                        </div>
                                        <p class="col-sm-10">
                                            @Html.DisplayFor(model => model.OccasionID)
                                        </p>
                                    </div>

                                    <div class="post">
                                        <div class="col-sm-2 user-block">
                                            <strong>@Html.DisplayNameFor(model => model.OccasionName)</strong>:
                                        </div>
                                        <p class="col-sm-10">
                                            @Html.DisplayFor(model => model.OccasionName)
                                        </p>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
