@model OnlineFloralDelivery.Models.Occasion

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Edit Occasion</h1>
                        <h5 style="color:red">@ViewBag.Error</h5>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="~/Admin/">Admin</a></li>
                            <li class="breadcrumb-item"><a href="~/Admin/Occasions/">Occasions</a></li>
                            <li class="breadcrumb-item active">Edit Occasions</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">

                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Edit Occasion</h3>
                            </div>
                            @using (Html.BeginForm("Edit", "Occasions", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.OccasionID)
                                    <div class="card-body">
                                        <div class="form-group row">
                                            @Html.LabelFor(model => model.OccasionName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                                            <div class="col-sm-10">
                                                @Html.EditorFor(model => model.OccasionName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter occasion name" } })
                                                @Html.ValidationMessageFor(model => model.OccasionName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>

                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-success">Save</button>
                                        <button type="reset" class="btn btn-default float-right" onclick="window.location = '../'">Cancel</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>