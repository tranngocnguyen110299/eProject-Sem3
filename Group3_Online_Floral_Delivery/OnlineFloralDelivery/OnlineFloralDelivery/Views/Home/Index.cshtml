@{
    ViewBag.Title = "Home Page";
    TempData["HomeActive"] = "active";
}

<section class="categories">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0">
                @{
                    foreach (var item in ViewBag.One_Bouquet)
                    {
                        <div class="categories__item categories__large__item set-bg"
                             data-setbg="@Url.Content(@item.MainImage)">
                            <div class="categories__text">
                                <h1>@item.BouquetName</h1>
                                <p>
                                    @item.ShortDescription
                                </p>
                                <a href="~/bouquet-@item.BouquetID">Shop now</a>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="col-lg-6">
                <div class="row">
                    @{
                        foreach (var item in ViewBag.Four_Bouquet)
                        {
                            <div class="col-lg-6 col-md-6 col-sm-6 p-0">
                                <div class="categories__item set-bg" data-setbg="@Url.Content(@item.MainImage)">
                                    <div class="categories__text">
                                        <h3 style="font-weight:bold">@item.BouquetName</h3>
                                        <br />
                                        <a href="~/bouquet-@item.BouquetID">Shop now</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>New bouquets</h4>
                </div>
            </div>
            <div class="col-lg-8 col-md-8">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">All</li>
                    @{
                        foreach (var item in ViewBag.Five_Category_For_Filter)
                        {
                            var a = "OKOK" + item.OccasionID;
                            <li data-filter=".@a">@item.OccasionName</li>
                        }
                    }
                </ul>
            </div>
        </div>
        <div class="row property__gallery">
            @{
                foreach (var item in ViewBag.Eight_New_Product)
                {
                    var a = "OKOK" + item.OccasionID;
                    <div class="col-lg-3 col-md-4 col-sm-6 mix @a">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="@Url.Content(item.MainImage)">
                                <div class="label new">New</div>
                                <ul class="product__hover">
                                    <li><a href="@Url.Content(item.MainImage)" class="image-popup"><span class="arrow_expand"></span></a></li>
                                    <li><a href="~/add-to-cart?bouquetID=@item.BouquetID&quantity=1"><span class="icon_bag_alt"></span></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h5><a href="~/bouquet-@item.BouquetID" style="color:black">@item.BouquetName</a></h5>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product__price">
                                    <script>document.write((@item.UnitPrice).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,').slice(0, -3));</script> VND
                                </div>
                                <div style="text-decoration: line-through; font-size:small">
                                    <script>document.write((@item.OldUnitPrice).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,').slice(0, -3));</script>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>


