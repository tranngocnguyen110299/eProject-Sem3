@model PagedList.IPagedList<OnlineFloralDelivery.ViewModels.BlogViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Blogs";
    TempData["BlogsActive"] = "active";
    ViewBag.Breadcrumb = "Blogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var blogCate = (List<OnlineFloralDelivery.ViewModels.BlogCategoriesViewModel>)ViewBag.BlogCategoies;

}

    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="~/home"><i class="fa fa-home"></i> Home</a>
                        <span>@ViewBag.Breadcrumb</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

@if (Model.Count() > 0)
{
    <section class="blog-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8">
                    <div class="section-title">
                        <h4>Top 3 newest blogs</h4>
                    </div>
                    @{
                        foreach (var item in Model)
                        {
                            <div class="blog__item">
                                <div class="blog__item__pic large__item set-bg" data-setbg="@Url.Content(item.Picture)"></div>
                                <div class="blog__details__item__title">
                                    <span class="tip"><a href="~/blog-@item.BlogID" style="color:white">Read now</a></span>
                                    <a style="cursor:pointer; color:black" href="~/blog-@item.BlogID"><h6><strong>@item.BlogName</strong></h6></a>
                                    <ul>
                                        <li>by <span>@item.Username</span></li>
                                        <li>@item.Date</li>
                                    </ul>
                                </div>
                            </div>
                        }
                    }
                    <br />
                    <div class="col-lg-12 text-center">
                        <div class="pagination__option" style="display:inline-block; vertical-align:middle;">
                            @Html.PagedListPager(Model, page => Url.Action("Index",
                            new { id = ViewBag.CurrentBlogCate, page }))
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4">
                    <div class="blog__sidebar">
                        <div class="blog__sidebar__item">
                            <div class="section-title">
                                <h4>Blog categories</h4>
                            </div>
                            <ul>
                                @{
                                    foreach (var item in blogCate)
                                    {
                                        <li><a href="~/blogcategory-@item.BlogCategoriesID">@item.BlogCategoriesName</a></li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="checkout spad">
        <div class="container">
            <div class="alert alert-success" style="font-size:large">Sorry! No results found!</div>
        </div>
    </section>
}



