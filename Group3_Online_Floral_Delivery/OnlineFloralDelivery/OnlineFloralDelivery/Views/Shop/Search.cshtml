@model PagedList.IPagedList<OnlineFloralDelivery.ViewModels.BouquetViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Search";
    ViewBag.Breadcrumb = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="~/home"><i class="fa fa-home"></i> Home</a>
                        <span>@ViewBag.Breadcrumb</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

<section class="shop spad">
    <div class="container">
        <div class="row">

            @*@{ Html.RenderAction("Sidebar", "Shop"); }*@

            @if (Model.Count > 0)
            {
                <div class="col-lg-9 col-md-9">
                    <div class="row">
                        @{
                            foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-md-6">
                                    <div class="product__item">
                                        <div class="product__item__pic set-bg" data-setbg="@Url.Content(item.MainImage)">
                                            <div class="label new">New</div>
                                            <ul class="product__hover">
                                                <li><a href="@Url.Content(item.MainImage)" class="image-popup"><span class="arrow_expand"></span></a></li>
                                                <li><a href="~/add-to-cart?bouquetID=@item.BouquetID&quantity=1"><span class="icon_bag_alt"></span></a></li>
                                            </ul>
                                        </div>
                                        <div class="product__item__text">
                                            <h6><a href="~/product-@item.BouquetID">@item.BouquetName</a></h6>
                                            <div class="rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <div class="product__price">
                                                <script>document.write((@item.UnitPrice).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,').slice(0, -3));</script> VND
                                            </div>
                                            <div style="text-decoration: line-through; font-size:small">
                                                <script>document.write((@item.OldUnitPrice).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,').slice(0, -3));</script>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <br />
                        <div class="col-lg-12 text-center">
                            <div class="pagination__option" style="display:inline-block; vertical-align:middle;">
                                @Html.PagedListPager(Model, page => Url.Action("ShopByBrand",
                                new { id = TempData["CurrentBrand"], page }))
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-lg-9 col-md-9">
                    <div class="row">
                        <h4>Sorry, no results found! Please try searching for something else</h4>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
